.container
	width: 960px;
	max-width: 90%;
	margin: 0 auto;
	
	#top_header
		width: 100%;
		padding: 75px 0px;
		display: flex;
		justify-content: space-between;
		
		.logo_wrapper
			position: relative;
			
			.logo
				position: absolute;
				top: -15px;
				left: -30px;	
				padding: 30px;
				border-radius: 50%;
				background: $blue;
		
		a
			width: 20%;
			text-decoration: none;
			color: $gray;
			border-bottom: 1px solid $gray;
			-webkit-transition: all .3s ease-in-out;
			-moz-transition: all .3s ease-in-out;
			transition: all .3s ease-in-out;
			&:nth-child(3), &:nth-child(4)
				text-align: right;
			&:hover
				color: $blue;
				border-bottom: 1px solid $blue;
				
	header
		text-align: center;
		// height: 100vh;
		
		.title
			line-height: 1.5;
			
			.light
				font-size: 27px;
				opacity: 0.8;

			.lighter
				font-size: 24px;
				opacity: 0.6;
				
		#svg2
			width: 500px;
			margin-top: -420px;
			margin-bottom: -380px;
			
		i
			position: absolute;
			bottom: 10px;
			font-size: 40px;
			color: $gray;
				
	section#about
		
		.text
			line-height: 2;
			
	section#skills
		
		.section
			
			float: left;
			width: 46%;
			margin: 0 2%;
			
			.col
				position: relative;
				width: 100%;
				padding: 5px 0px;
				color: $gray;
				
				.launched
					transition: all .8s ease-in-out;
				
				.ability
					position: absolute;
					z-index: 101;
					border-bottom: 2px solid $blue;
				
				.rest
					position: absolute;
					width: 100%;
					border-bottom: 2px solid $gray;
					opacity: 0.3;
					
				.html
					width: 0%;
					&.launched
						width: 90%;
					
				.css
					width: 0%;
					&.launched
						width: 90%;
					
				.javascript
					width: 0%;
					&.launched
						width: 70%;
					
				.front_framework
					width: 0%;
					&.launched
						width: 75%;
						
				.csharp
					width: 0%;
					&.launched
						width: 20%;
						
				.php
					width: 0%;
					&.launched
						width: 20%;
						
				.node
					width: 0%;
					&.launched
						width: 15%;
						
				.back_framework
					width: 0%;
					&.launched
						width: 20%;
					
	section#portfolio
		
		.wrapper
			
			.box
				max-width: 700px;
				display: flex;
				flex-flow: row wrap;
					
				.work
					position: relative;
					width: 33%;
					height: 350px;
					background: url(../images/portfolio.jpg);
					background-size: cover;
					color: #FFFFFF;
					cursor: pointer;
					overflow: hidden;
					border: 1px solid #FFFFFF;
					&:hover
						.info
							opacity: 1;
							transform: translate(0%, 0%) scale(1);
					
					.info
						
						position: absolute;
						top: 0;
						left: 0;
						right: 0;
						bottom: 0;
						padding: 10px;
						background: rgba(39, 170, 214, 0.7);
						transform: translate(0%, 100%) scale(0.5);
						transition: all .3s ease-in-out;
						opacity: 0;
						
						.title
							font-size: 15px;
							font-weight: 700;
							
						.line
							width: 15px;
							
						.text
							text-align: center;
							font-size: 13px;
							line-height: 1.5;
						
					
						
	section#contact
		text-align: center;
		
		a
			display: block;
			width: 250px;
			margin: 0 auto;
			line-height: 4;
			border-radius: 70px;
			text-decoration: none;
			background: $blue;
			color: #FFFFFF;
			font-size: 20px;
			transition: all .3s ease-in-out;
			&:hover
				-webkit-box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.75);
				-moz-box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.75);
				box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.75);
				
	section#footer
		position: relative;
		width: 100%;
		border-top: 1px solid $gray;
		text-align: center;
		
		.cr
			margin-top: 120px;
			color: $gray;
			
		img
			position: absolute;
			width: 200px;
			top: 0;
			left: 0;
			
